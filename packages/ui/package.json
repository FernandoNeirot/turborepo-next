    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.15.3",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.23",
