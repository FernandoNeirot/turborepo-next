{
  "name": "turborepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "prepare": "husky install",
    "changeset": "changeset",
    "version:changeset": "pnpm exec changeset version",
    "release": "pnpm build && changeset publish",
    "publish:direct": "node scripts/publish-direct.js",
    "publish:ui": "node scripts/publish-direct.js"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.11",
    "prettier": "^3.7.4",
    "turbo": "^2.7.2",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
